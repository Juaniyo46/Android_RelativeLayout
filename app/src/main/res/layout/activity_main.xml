<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/marron"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/time"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/time"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/text1"
            android:gravity="center_vertical"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="Plan de Entrenamiento"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/time"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:textColor="@color/blanco"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/text1"
            android:src="@drawable/mayor"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/notas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/note"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text2"
            android:gravity="center_vertical"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="Comentar Entrenamiento"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/notas"
            android:textColor="@color/blanco"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mayor"
            android:layout_toEndOf="@+id/text2"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/campana"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calendario"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text3"
            android:gravity="center_vertical"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="Recordatorios"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/campana"
            android:textColor="@color/blanco"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mayor"
            android:layout_toEndOf="@+id/text3"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/check"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/completados"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text4"
            android:gravity="center_vertical"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="Completados"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/check"
            android:textColor="@color/blanco"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mayor"
            android:layout_toEndOf="@+id/text4"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/ajustes"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ajustes"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text5"
            android:gravity="center_vertical"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="Ajustes"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/ajustes"
            android:textColor="@color/blanco"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mayor"
            android:layout_toEndOf="@+id/text5"/>

    </RelativeLayout>

    <Button
        android:id="@+id/continuar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@color/blanco"
        android:textStyle="bold"/>


</LinearLayout>